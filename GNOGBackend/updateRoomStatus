const mysql = require('mysql2/promise');
require('dotenv').config();

const { DB_HOST, DB_PORT, DB_USER, DB_PASSWORD, DB_DATABASE } = process.env;

// Create a connection pool
const pool = mysql.createPool({
  host: DB_HOST,
  port: DB_PORT,
  user: DB_USER,
  password: DB_PASSWORD,
  database: DB_DATABASE,
  waitForConnections: true,
  connectionLimit: 10,
  queueLimit: 0
});

async function updateRoomStatus({ room_id, status }) {
  try {
    const connection = await pool.getConnection();

    // Update the room_status in the room table
    const [results, fields] = await connection.execute(
      'UPDATE room SET room_status = ? WHERE room_id = ?',
      [status, room_id]
    );

    connection.release(); // Release the connection back to the pool

    if (results.affectedRows === 1) {
      // Successfully updated
      return { success: true, message: 'Room status updated successfully.', room_id, updatedStatus: status };
    } else {
      // No rows affected, room_id not found
      return { success: false, message: 'Room not found.' };
    }
  } catch (error) {
    console.error('Error updating room status:', error);
    throw error;
  }
}

module.exports = {
  updateRoomStatus: updateRoomStatus,
};